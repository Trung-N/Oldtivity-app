<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".profile">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Welcome!"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="75sp"/>

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textColor="@android:color/black"
        android:textSize="30sp" />


    <Button
        android:id="@+id/friendsList2"
        android:layout_width="383dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="240dp"
        android:background="#0AA2CB"
        android:lineSpacingExtra="20sp"
        android:onClick="goToChats"
        android:text="WANNA CHAT"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="482dp" />

    <Button
        android:id="@+id/exploreEvents"
        android:layout_width="383dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:background="#0AA2CB"
        android:lineSpacingExtra="20sp"
        android:onClick="exploreEvents"
        android:text="Explore Events"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="359dp" />

    <Button
        android:id="@+id/myEvents"
        android:layout_width="383dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0AA2CB"
        android:lineSpacingExtra="20sp"
        android:onClick="myEvents"
        android:text="My Events"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="visible" />

</RelativeLayout>